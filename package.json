{
  "name": "@hollowverse/clown",
  "version": "0.0.0-Set-by-CI-when-publishing",
  "description": "CLI for scaffolding projects and juggling common configurations",
  "repository": "git@github.com:hollowverse/clown.git",
  "author": "Hollowverse",
  "license": "Unlicense",
  "scripts": {
    "test": "jest",
    "lint": "tslint './*.ts' 'src/**/*.ts' --project tsconfig.json",
    "build": "tsc && babel bin -d bin",
    "dev": "tsc --watch",
    "lint-staged": "lint-staged",
    "clown": "clown"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "clown": "./bin/src/cli/clown.js"
  },
  "private": false,
  "lint-staged": {
    "**/*.ts{x,}": [
      "tslint -p ./tsconfig.json"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ]
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.42",
    "@babel/runtime": "^7.0.0-beta.42",
    "@forabi/memfs": "^2.7.2",
    "bluebird": "^3.5.1",
    "chalk": "^2.3.2",
    "commander": "^2.12.1",
    "common-tags": "^1.7.2",
    "detect-indent": "^5.0.0",
    "fs-extra": "^5.0.0",
    "globby": "^8.0.1",
    "ignore": "^3.3.7",
    "jest-diff": "^22.4.3",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@hollowverse/clown": "^0.0.4",
    "@hollowverse/config": "^4.0.0",
    "@hollowverse/utils": "^5.0.2",
    "@types/bluebird": "^3.5.20",
    "@types/chalk": "^2.2.0",
    "@types/commander": "^2.11.0",
    "@types/common-tags": "^1.4.0",
    "@types/detect-indent": "^5.0.0",
    "@types/fs-extra": "^5.0.1",
    "@types/globby": "^6.1.0",
    "@types/jest": "^21.1.5",
    "@types/jest-diff": "^20.0.0",
    "@types/lodash": "^4.14.85",
    "@types/node": "^8.0.53",
    "@types/shelljs": "^0.7.6",
    "@types/write-json-file": "^2.2.1",
    "babel-eslint": "^8.2.1",
    "eslint": "^4.1.1",
    "husky": "^0.15.0-rc.8",
    "jest": "^21.2.1",
    "lint-staged": "^7.0.0",
    "prettier": "^1.5.3",
    "ts-jest": "^21.1.4",
    "tslint": "^5.5.0",
    "typescript": "^2.8.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "setupFiles": [
      "<rootDir>/mockAndTestHelpers/setup.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(src/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "bin"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "engines": {
    "node": ">= 6.10"
  }
}
